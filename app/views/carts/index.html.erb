<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<h3>Customer Name: <%= @customer.name%></h3>
<table>
  <thead>
    <tr>
      <th>Orders</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.customer %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Oder', new_customer_cart_path%>
